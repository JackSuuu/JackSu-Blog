---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0 auto;
				padding: 5em 1em 3em 1em;
				box-sizing: border-box;
				overflow-x: hidden;
			}
			article {
				width: 100%;
				max-width: 760px;
				margin: 30px auto 0 auto;
				box-sizing: border-box;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-width: 100%;
				height: auto;
			}
			.prose {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em;
				color: var(--text-light);
				box-sizing: border-box;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: var(--text);
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--text-light);
			}
			.last-updated-on {
				font-style: italic;
				color: var(--text-light);
			}
			.tags {
                margin-top: 1em;
                display: flex;
                flex-wrap: wrap;
                gap: 0.5em;
				justify-content: center;
            }
            .tag {
                background: var(--c8);
                color: var(--c0);
                padding: 0.3em 0.6em;
                border-radius: 12px;
                font-size: 0.9em;
            }
			@media (max-width: 720px) {
				main {
					padding: 5em 1.25em 1em 1.25em;
				}
				.prose {
					padding: 0.5em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={680} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
					{tags && (
                        <div class="tags">
                            {tags.map((tag) => (
                                <span class="tag">{tag}</span>
                            ))}
                        </div>
                    )}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>